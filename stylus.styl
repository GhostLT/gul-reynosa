azul = #22BCE0
gris_oscuro = #444
gris_texto = #7A7A7A
naranja = #DD4F24

@font-face {
font-family: 'iconitos';
src:url('./fonts/icomoon.eot?jkpg0');
src:url('./fonts/icomoon.eot?jkpg0#iefix') format('embedded-opentype'),
url('./fonts/icomoon.ttf?jkpg0') format('truetype'),
url('./fonts/icomoon.woff?jkpg0') format('woff'),
url('./fonts/icomoon.svg?jkpg0#icomoon') format('svg');
font-weight: normal;
font-style: normal;
}

a
    color naranja

body
    background #E8E8E8
    color gris_oscuro
    font-family Arial
    font-size 16px

footer
     background naranja
     color rgba(white,0.5)
     padding 1em 0
     text-align center
     width 100%

h3
    fontsize 14px
    font-weight normal

strong
    display inline

header
    background gris_oscuro
    box-shadow 0 5px 0 rgba(0,0,0,0.2)
    color white
    overflow hidden
    padding 0.5em
    position relative
    z-index 1

    .logo
        border-right 1px solid naranja
        margin-right 5px
        width 80px

        img
            width 80px 

    .titular
        margin 0 80px 0 70px

        .filtro
            color naranja
            font-size 14px
            font-weight bold
            font-style italic
            text-decoration none

        .publicar
            background naranja
            color white
            font-style italic
            margin -5px 1em 0 0
            padding 0.2em 0.5em
            text-decoration none
            text-shadow 1px 1px 0px black

            &:before
                 display inline-block
                 font-family "iconitos"
                 content "\e900"
                 margin 0 3px 0 0
        .titulo
            color azul
            font-size 18px
            font-weight normal
            margin 16px 5px 5px 5px
            padding 0

     .usuario
        position absolute
        right 10px
        top 10px

        .avatar
            margin 0 1.5em 0 0
            position relative
            z-index 2

            img
                width 60px
                border-radius 50%
                
        .flechita
             background naranja 
             color white
             display block
             padding 3px
             position absolute
             right 0
             top 8px
             text-align right
             text-decoration none
             width 50%
             z-index 0

             &:after
                  display inline-block
                  font-family "iconitos"
                  content "\e903"
                  text-shadow 1px 1px 0px black

nav
    background azul
    border-left 15px solid white
    border-right 15px solid white
    position relative
    
    &:before
          border-bottom 20px solid transparent
          border-left 37px solid white
          border-top 20px solid transparent
          content ""
          position absolute
          top 0
          left 0 

    &:after
          border-bottom 20px solid transparent
          border-right 37px solid white
          border-top 20px solid transparent
          content ""
          position absolute
          top 0
          right 0
          
nav
    height 40px
    line-height 40px
    margin 0
    padding 0
    background azul
    overflow-x auto
    white-space nowrap

    .menu
         margin 0
         li
              display inline-block

              a
                   /*border 1px solid*/ 
                   color white
                   padding 0.2em
                   margin 0 0.2em
                   text-decoration none

.posts
     padding 0.5em

     .post
         background white
         border-radius 0 0 0.5em 0.5em
         color gris_texto
         box-shadow 2px 2px 10px rgba(black, 0.5)
         margin-bottom 1em

         .acciones
              border-top 3px solid azul
              padding 0.5em
              overflow hidden

             /* .datos*/
                  /*float right*/

                  .comentarios
                       background gris_texto
                       border-radius 3px
                       color white
                       margin 0 1.5 0 0 
                       padding 2px 5px
                       text-decoration none

                  .estrellita
                       text-decoration none

                       &:after
                            font-family "iconitos"
                            color:#E0D561
                            content "\e901"

             .votos
                  /*float left*/

                  .down
                  .up
                       text-decoration none
                  .down
                       color red
                       &:before
                            font-family "iconitos"
                            font-size 1.5em
                            content "\e903"
                            vertical-align bottom

                  .up
                       color green
                       &:before
                            font-family "iconitos"
                            font-size 1.5em
                            content "\e903"
                            vertical-align bottom

         .descripcion
              color gris_texto

              .detalles
                   height 160px
                   margin-left 130px

                   .autor
                        margin 0.5em 0 2em 0

                   .fecha
                        /*float right*/
                        margin -0 1em 0 0
                        

                   .tag
                        background azul
                        border-radius 0.5em 
                        color white
                        padding 0.2em 0.5em
                        text-decoration none

                    .titulo 
                         color gris_oscuro
                         font-size 18px
                         font-style italic
                         margin 0
                         padding 0.5em 0.5em 0 0

              /*.imagen*/
                   /*float left*/
                   img
                       height 160px
                       vertical-align top
                       width 120px
.left
    float left

.right
    float right

@media screen and (min-width: 768px)

    .posts
        .post
            display inline-block
            width 48%
            vertical-align top
            &:nth-child(odd)
                margin-right 2%


